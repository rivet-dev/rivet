---
import { getImage } from 'astro:assets';
import MarketingLayout from '@/layouts/MarketingLayout.astro';
import { NotFoundPage } from '@/components/marketing/NotFoundPage';
import imgThinker from '@/images/thinking/thinker.jpg';

const optimizedImage = await getImage({
  src: imgThinker,
  width: 800,
  format: 'webp',
  quality: 80
});
---

<MarketingLayout
  title="Page Not Found"
  description="The page you're looking for doesn't exist."
  robots="noindex, nofollow"
>
  <div class="min-h-screen bg-black font-sans text-zinc-300 selection:bg-[#FF4500]/30 selection:text-orange-200">
    <NotFoundPage thinkingImage={optimizedImage.src} client:load />
  </div>
</MarketingLayout>
