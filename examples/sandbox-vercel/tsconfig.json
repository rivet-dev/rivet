{
	"compilerOptions": {
		"target": "esnext",
		"lib": [
			"esnext",
			"dom",
			"dom.iterable"
		],
		"jsx": "react-jsx",
		"module": "esnext",
		"moduleResolution": "bundler",
		"types": [
			"node",
			"vite/client"
		],
		"noEmit": true,
		"strict": true,
		"skipLibCheck": true,
		"allowImportingTsExtensions": true,
		"rewriteRelativeImportExtensions": true
	},
	"include": [
		"src/**/*",
		"api/**/*",
		"frontend/**/*"
	]
}
