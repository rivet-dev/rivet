{
	"$schema": "https://biomejs.dev/schemas/2.1.1/schema.json",
	"files": {
		"includes": [
			"**/*.js",
			"**/*.json",
			"**/*.ts",
			"**/*.tsx",
			"!engine/artifacts",
			"!engine/sdks",
			"!engine/sdks/typescript/api-full",
			"!engine/sdks/typescript/runner-protocol",
			"!frontend/packages",
			"!examples",
			"!rivetkit-openapi/openapi.json",
			"!scripts",
			"!website",
			"!**/*.gen.*"
		],
		"ignoreUnknown": true
	},
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true,
		"defaultBranch": "main"
	},
	"formatter": {
		"enabled": true,
		"useEditorconfig": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": {
				"noUselessElse": "off",
				"useNodejsImportProtocol": "error"
			},
			"correctness": {
				"noUnusedImports": "warn"
			},
			"suspicious": {
				"noExplicitAny": "off"
			}
		}
	}
}
